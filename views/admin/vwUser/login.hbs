{{#if showError}}
<div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Title!</strong> {{errorMsg}}
</div>
{{/if}}

<form class="form-horizontal" method="post" onsubmit="return sendData()">
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Tên đăng nhập</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtUsername" placeholder="Tên đăng nhập" name="username">
        </div>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtPWD" placeholder="Password" name="rawPWD">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <label>
                <input type="checkbox" name="remember">
                Ghi nhớ
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" onclick="sendData()" class="btn btn-success">
                <span class="glyphicon glyphicon-check"></span>
                Đăng nhập
            </button>
            <a  href="/admin/register" onclick="sendData()" class="btn btn-primary">
                <span class="glyphicon glyphicon-check"></span>
                Đăng Kí
            </a>
 
        </div>
    </div>
</form>

<script>
    var function sendData() {
        var form = document.querySelector('form');
        var data = new FormData(form);
        var req = new XMLHttpRequest();
        req.send(data);
    }
</script>